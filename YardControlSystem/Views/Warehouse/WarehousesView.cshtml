@model IEnumerable<YardControlSystem.Models.Warehouse>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sandėlių sąrašas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Warehouse" asp-action="Create" class="btn btn-primary">Pridėti naują sandėlį</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Įmonė
                    </th>
                    <th>
                        Adresas
                    </th>
                    <th>
                        Miestas
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.Company</td>
                        <td width="25%">@obj.Address</td>

                        <td width="20%">@obj.City</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Ramp" asp-action="RampsView" asp-route-Id="@obj.Id" class="btn btn-primary">Peržiūrėti rampas</a>
                                <a asp-controller="Warehouse" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Atnaujinti</a>
                                <a asp-controller="Warehouse" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Šalinti</a>
                            </div>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nėra pridėtų sandėlių</p>
    }

</div>

