@model IEnumerable<YardControlSystem.Models.ViewModels.RampManagementViewModel>

@{
    ViewData["Title"] = "RampManagement";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sandėliai, rampos ir užsakymai</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            </thead>
            <tbody>

                
                @foreach (var item in Model)
                {

                    <table class="table table-bordered table-striped" style="width:100%">
                        <tr>
                            <td width="25%">
                            <h4>
                                @item.Warehouses.Company
                                </h4>
                                </td>

                        </tr>

                        @foreach (var rampa in item.Ramps)
                        {


                            @if (rampa.WarehouseId == item.Warehouses.Id)
                            {

                            <tr>
                               
                            <td width="25%">
                                    <h6>
                                        Rampa @rampa.Number
                                        </h6>
                            </td>

                            </tr>
                            }

                            @foreach (var operation in item.Operations)
                            {
                    <tr>
                        @if (item.Warehouses.Id == operation.WarehouseId && operation.RampId == rampa.Id)
                        {
                            @if (operation.ReservedDate > DateTime.Today)
                            {
                                <td width="25%"> Operacija @operation.Id</td>
                                <td width="25%">Duration @operation.ReservedDate</td>
                                <td>
                                    <a asp-controller="Ramp" asp-action="Update" asp-route-Id="@operation.Id" class="btn btn-primary mx-1">Pažymėti</a>

                                </td>
                                break;
                            }

                        }

                    </tr>
                            }
                        }
                    </table>

                }


            </tbody>
        </table>
    }
    else
    {
        <p>Nėra rampų.</p>
    }

</div>
