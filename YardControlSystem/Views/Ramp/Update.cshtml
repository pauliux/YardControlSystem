@model YardControlSystem.Models.Ramp

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Atnaujinti rampos informaciją</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Number">Numeris</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Working">
                            Būsena: 

                            @if (Model.Working == true)
                            {
                                <a>Veikia</a>
                            }
                            else
                            {
                                <a>Neveikia</a>
                            }

                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <a>Langelis pažymėtas - veikia</a>
                        <br />
                        <a>Langelis nepažymėtas - neveikia</a>
                        <input asp-for="Working" class="form-control" />
                        <span asp-validation-for="Working" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Atnaujinti" />
                        </div>
                        <div class="col">
                            <a asp-action="RampsView" class="btn btn-danger w-75">Atgal</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
}
}

